
@using BevragingIngeschrevenPersonen.Types;

@inject IJSRuntime JSRuntime


<h4>@ToonTitel()</h4>

@if (BrpPersoon != null)
{
    <table class="table-responsive">
        <tr><td></td><td></td></tr>
        <tr><td class="head" onclick="@Collapser()">@nameof(BrpPersoon.Aanschrijfwijze)</td>           <td>@BrpPersoon.Aanschrijfwijze</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Aanhef)</td>                    <td>@BrpPersoon.Aanhef</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Burgerservicenummer)</td>       <td>@BrpPersoon.Burgerservicenummer</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.DatumGeboorte)</td>             <td>@BrpPersoon.DatumGeboorte</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.DatumGeboorteBevolking)</td>    <td>@BrpPersoon.DatumGeboorteBevolking</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.DatumOverlijden)</td>           <td>@BrpPersoon.DatumOverlijden</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Geboorteland)</td>              <td>@BrpPersoon.Geboorteland</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Geheim)</td>                    <td>@BrpPersoon.Geheim</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Geslacht)</td>                  <td>@BrpPersoon.Geslacht</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Naam)</td>                      <td>@BrpPersoon.Naam</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Nationaliteit1)</td>            <td>@BrpPersoon.Nationaliteit1</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Nationaliteit2)</td>            <td>@BrpPersoon.Nationaliteit2</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Voorletters)</td>               <td>@BrpPersoon.Voorletters</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Voornamen)</td>                 <td>@BrpPersoon.Voornamen</td></tr>
        <tr id="collapsable" class="collapse out"><td>@nameof(BrpPersoon.Voorvoegsels)</td>              <td>@BrpPersoon.Voorvoegsels</td></tr>
    </table>

    if (BrpPersoon.Burgerservicenummer != null)
    {
        <button>Ouders</button>
        <button>Kinderen</button>
        <button>Medebewoners</button>
    }
}

@code {

    private string titel;

    [Parameter]
    public Persoon BrpPersoon { get; set; }

    [Parameter]
    public EventCallback<Persoon> BrpPersoonChanged { get; set; }

    public string ToonTitel()
    {
        return BrpPersoon != null ? BrpPersoon.Naam : "Detailgegevens:";
    }

    public async Task Collapser()
    {
        await JSRuntime.InvokeVoidAsync("jsCollapser");
    }
}
